{% extends "admin/layout.html.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <a href="{{ path('admin.index') }}" class="btn btn-primary">
        <span class="glyphicon glyphicon-chevron-left"></span> Retour Ã  l'accueil
    </a>
    <h2>
        {{ title }}
    </h2>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissible fade in">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="well">
        {{ form_start(articleForm, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_label(articleForm.title, null, { 'label_attr':  {
                    'class': 'col-sm-4 control-label'
                }}) }}
                <div class="col-sm-6">
                    {{ form_widget(articleForm.title, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                    <div class="text-danger">{{ form_errors(articleForm.title) }}</div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(articleForm.description, null, { 'label_attr':  {
                    'class': 'col-sm-4 control-label'
                }}) }}
                <div class="col-sm-6">
                    {{ form_widget(articleForm.description, { 'attr':  {
                        'rows': '4',
                        'class': 'form-control'
                    }}) }}
                    <div class="text-danger">{{ form_errors(articleForm.description) }}</div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(articleForm.image_url, null, { 'label_attr':  {
                    'class': 'col-sm-4 control-label'
                }}) }}
                <div class="col-sm-6">
                    {{ form_widget(articleForm.image_url, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                    <div class="text-danger">{{ form_errors(articleForm.image_url) }}</div>
                    {% if article is defined and article.imageUrl is not empty %}
                        <img src="{{ article.imageUrl }}" alt="">
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(articleForm.url, null, { 'label_attr':  {
                    'class': 'col-sm-4 control-label'
                }}) }}
                <div class="col-sm-6">
                    {{ form_widget(articleForm.url, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                    <div class="text-danger">{{ form_errors(articleForm.url) }}</div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-3">
                    <input type="submit" class="btn btn-primary" value="{{ submit }}" />
                </div>
            </div>
        {{ form_end(articleForm) }}
    </div>
{% endblock %}
